with Trains;

package Engineers is
   -- This package provides the basic types for all engineers
   -- Each engineer must be associated with a train of the same ID
   -- Each engineer will have a skill level, an engineer ID, the ID of the
   --      train that it controls, and the controller that it is reading from

   type Skill_Level is (Novice, Expert);
   subtype Engineer_ID is Integer range 1 .. Trains.Max_Trains;

end Engineers;

